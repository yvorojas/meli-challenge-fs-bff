{
  "name": "meli-challenge-fs-bff",
  "version": "1.0.0",
  "description": "challenge for fullstack, bff part",
  "main": "index.js",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/infrastructure/**/*.js",
      "!src/infrastructure/*.js",
      "!src/gateways/controllers/**/*.js",
      "!src/gateways/controllers/*.js",
      "!src/gateways/interfaces/**/*.js",
      "!src/gateways/interfaces/*.js",
      "!src/application/useCases/items/index.js",
      "!src/application/interfaces/**/*.js",
      "!src/application/interfaces/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "scripts": {
    "build": "npm-run-all clean transpile",
    "transpile": "babel src --out-dir build --source-maps",
    "server": "node  -r dotenv/config ./build",
    "dev": "NODE_ENV=development npm-run-all build server",
    "clean": "rimraf build",
    "watch:dev": "nodemon",
    "coverage": "jest --coverage",
    "test": "jest . --watch"
  },
  "repository": "git@github.com:yvorojas/meli-challenge-fs-bff.git",
  "author": "Yvo Rojas Valdes <yvo.rojas.valdes@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "http-status-codes": "^2.1.4",
    "swagger-jsdoc": "4.0.0",
    "swagger-ui-express": "4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "babel-jest": "^26.1.0",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "moxios": "^0.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2"
  }
}
